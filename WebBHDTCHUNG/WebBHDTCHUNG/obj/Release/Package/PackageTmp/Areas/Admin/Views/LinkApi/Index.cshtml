@model IEnumerable<WebBHDTCHUNG.Models.Link_API>
@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header text-center">Danh sách Công ty</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/admin/linkapi/create" class="btn btn-info"><i class="fa fa-plus"></i> Tạo mới</a>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Công ty</th>
                                <th>Code</th>
                                <th>Key</th>
                                <th>Domain</th>
                                <th>Ngày tạo</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Company</td>
                                    <td>@item.Code</td>
                                    <td>@item.KeyParam</td>
                                    <td>@item.Domain</td>
                                    <td>@item.Createdate</td>
                                    <td>
                                        <a href="/admin/linkapi/edit/@item.Id" class="btn"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


